<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_single_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_speech"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/recording_container"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/recording_hint_bg"
            android:padding="10dp"
            android:visibility="invisible">

            <!-- 使用语音功能，录音时的图像 -->
            <ImageView
                android:id="@+id/mic_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/record_animate_01" />

            <TextView
                android:id="@+id/recording_hint"
                style="@style/WRAP.TextView.WHITE"
                android:layout_below="@id/mic_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="手指上滑，取消发送"
                android:textSize="14sp" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/rl_chat_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/message_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <LinearLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/chat_input_layout_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dip"
                android:paddingTop="6dip">

                <ImageView
                    android:id="@+id/btn_set_mode_voice"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_voice_input"
                    android:scaleType="centerCrop"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_set_mode_keyboard"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/ic_keyinput"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/btn_press_to_speak"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rl_chat_record_selector"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="按住说话"
                        android:textColor="@color/common_gray"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/edittext_layout"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <com.example.administrator.myapplication.BluetoothChat.config.MyChatEditText
                        android:id="@+id/et_sendmessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/chat_input_shape"
                        android:hint="说点什么吧..."
                        android:maxLines="3"
                        android:minHeight="30dp"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:textColor="@color/photopicker_background"
                        android:textSize="14sp"></com.example.administrator.myapplication.BluetoothChat.config.MyChatEditText>

                    <ImageView
                        android:id="@+id/iv_emoticons"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical|right"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/ic_emoji"
                        android:visibility="visible" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_more"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/ic_more"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="4dp"
                    android:background="@mipmap/ic_send"
                    android:clickable="true"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/ll_bottom_chat_container"
            layout="@layout/ll_bottom_chat_more" />
    </LinearLayout>
</LinearLayout>
