<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contents_text"
    android:orientation="vertical"
    android:padding="45dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_cendter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone"
        android:src="@mipmap/ic_spalsh_white" />


    <TextView
        android:id="@+id/tv_cendter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="用技术连接你我"
        android:textColor="@color/bg_white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.example.administrator.myapplication.loadingView.view.WSEatBeans
        android:id="@+id/load_eat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>